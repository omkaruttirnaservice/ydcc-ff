extends ./layout_tailwind
block content

  div(class="w-full mx-auto my-5 max-w-md bg-white rounded-2xl shadow-lg p-8")
    h2(class="text-2xl font-bold text-center text-gray-700 mb-6") #{title}

    form#forget-username(class="space-y-5")
      div
        label(for="aadhaar" class="block text-sm font-medium text-gray-600 mb-1") Aadhaar Number
        input(type="text" id="aadhaar" placeholder="Enter Aadhaar Number"
          name="forAadharNumber"
          class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" maxlength="12")

      div
        label(for="mobile" class="block text-sm font-medium text-gray-600 mb-1") Mobile Number
        input(type="text" id="mobile" placeholder="Enter Mobile Number"
          name="forgetMobileNumber"
          class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" maxlength="10")

      div#otp-input-container.hidden
        div
          label(for="otp" class="block text-sm font-medium text-gray-600 mb-1") Enter OTP
        div.flex.gap-3
          input(type="text" id="otp" placeholder="Enter OTP"
            name="otp"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" maxlength="10")
          button(
            type="button"
            class="w-full py-2 rounded-lg bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold hover:opacity-90"
            id="verify-otp-btn"
          ) Verify OTP
        span#otp-error

    div#messageContainer.my-3
    div#messageContainer-2.my-3.text-center

    button(type="button" 
      class="w-full py-2 rounded-lg bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold hover:opacity-90"
      id="get-user-id"
      )
      | #{type == 'userid' ? 'Get User ID' : 'Get Password'}

    div#showPass

    div(class="mt-4 text-center space-x-6")
        a(href="/" class="text-blue-600 hover:underline text-sm") Back to Home
        //- a(href="/forget?type=password" class="text-blue-600 hover:underline text-sm") Forget Password?

    script(src="/assets/js/forgetUsernameHandler.js" type="module")

