extends ./layout_tailwind
block content
    div(class="w-full mx-auto my-5 max-w-md bg-white rounded-2xl shadow-lg p-8")
      h2(class="text-2xl font-bold text-center text-gray-700 mb-6") Forgot Password

      form#forget-password(class="space-y-5")
        div
          label(for="forgetUserName" class="block text-sm font-medium text-gray-600 mb-1") User ID
          input(type="text" id="forgetUserName" name="forgetUserName" placeholder="Enter User ID"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none")

        div
          label(for="forAadharNumber" class="block text-sm font-medium text-gray-600 mb-1") Aadhaar Number
          input(type="text" id="forAadharNumber" name="forAadharNumber" placeholder="Enter Aadhaar Number"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" maxlength="12")


        button(type="button" 
          id="get-password"
          class="w-full py-2 rounded-lg bg-gradient-to-r from-purple-500 to-indigo-600 text-white font-semibold hover:opacity-90")
          | Get Password

      div(class="mt-4 text-center space-x-6")
        a(href="/" class="text-blue-600 hover:underline text-sm") Back to Home
        a(href="/forget-username" class="text-blue-600 hover:underline text-sm") Forget username?

      div#password

    script(src="/assets/js/forgetPasswordHandler.js")